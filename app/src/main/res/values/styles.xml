<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <!-- Kolor paska stanu (Status Bar) -->
        <item name="android:statusBarColor">@color/colorStatusBar</item>
    </style>
    <style name="WhiteButtonStyle">
        <item name="android:background">@drawable/button_background</item> <!-- Tło z obwódką -->
        <item name="android:textColor">#000000</item> <!-- Czarny tekst -->
        <item name="android:padding">10dp</item> <!-- Padding wewnętrzny przycisku -->
        <item name="android:textSize">16sp</item> <!-- Rozmiar tekstu -->    </style>


    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ButtonRed">
        <item name="android:background">@color/colorStatusBar</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:radius"><![CDATA[25dp]]></item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownHeight">300dp</item> <!-- Maksymalna wysokość listy -->
        <item name="android:padding">8dp</item>
    </style>

</resources>
