<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:padding="16dp">


    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        android:background="#D3FFFFFF">

        <Button
            android:id="@+id/userView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Konto" />

        <Button
            android:id="@+id/buttonTelefon"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Telefony alarmowe" />

        <Button
            android:id="@+id/danger"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Zgłoś zagrożenie" />

        <Button
            android:id="@+id/btnmap"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Mapa" />

        <Button
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Wykres" />
    </LinearLayout>


    <Button
        android:id="@+id/showMenuButton"
        android:layout_width="57dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:drawableBottom="@android:drawable/ic_menu_sort_by_size" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Witaj!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <Button
        android:id="@+id/buttonViewDangers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pokaż zgłoszenia" />


    <Button
        android:id="@+id/buttonMapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mapa" />


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_dangers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/route_input_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#D3FFFFFF"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/buttonDanger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mapa" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

</LinearLayout>
